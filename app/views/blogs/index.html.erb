<p id="notice"><%= notice %></p>
<!-- ユーザがnilなら表示 -->
<% if current_user != nil %>
  <!-- ログインユーザ -->
    現在ログイン中のユーザ：<strong><%=current_user.name %></strong>
<% end %>
<h1>ブログ一覧</h1>
<!-- 検索の追加 -->
<%= form_with(path: :blogs_path, local: true, method: :get) do |form| %>
  <%= form.text_field :search_title, value: params[:search_title],placeholder: "タイトル検索"%>
<% end %>

<!-- ユーザがnilなら表示 -->
<% if current_user == nil %>
  <!-- ログイン -->
  <%= button_to "ログイン", { controller: 'users', action: 'new' }, { method: :get, class: "btn btn-primary" } %>
  <!-- 新規登録 -->
  <%= button_to "新規登録", { controller: 'users', action: 'index' }, { method: :get, class: "btn btn-primary" } %>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="blogs">
    <% @blogs.each do |blog| %>
      <tr>
        <!-- タイトルを追加 -->
        <td><%= blog.title %></td>
        <td><%= link_to t('show'), blog %></td>
        <td><%= link_to t('edit'), edit_blog_path(blog) %></td>
        <td><%= link_to t('destroy'), blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
</nav>


<%= link_to t('ranking'), ranking_path %> |
<% if current_user != nil %>
  <%= link_to t('new_blog'), new_blog_path %> |
  <%= link_to t('logout'), logout_path, method: :delete %>
<% end %>