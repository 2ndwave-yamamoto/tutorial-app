<table>
    <% comments.each do |comment| %>
      <tr>
        <td>
          <%= simple_format comment.body %>
        </td>
        <td>
          <%= comment.created_at.strftime("%Y/%m/%d") %>
        </td>
        <td><%= link_to t('destroy'), @blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>